<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Кодировка файла -->
    <property name="charset" value="UTF-8"/>

        <!-- Проверка длины строки -->
        <module name="LineLength">
            <property name="max" value="120"/> <!-- Максимальная длина строки -->
        </module>

    <module name="TreeWalker">

        <!-- Проверка пробела после определенных символов -->
        <module name="WhitespaceAfter"/>

        <!-- Проверка пробелов вокруг операторов -->
        <module name="WhitespaceAround"/>

        <!-- Проверка на финальный локальные переменные -->
        <module name="UnusedImports"/>

        <!-- Проверка отступов -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/> <!-- Базовый отступ -->
            <property name="braceAdjustment" value="0"/> <!-- Отступ для скобок -->
            <property name="caseIndent" value="4"/> <!-- Отступ для case в switch -->
            <property name="throwsIndent" value="4"/> <!-- Отступ для throws -->
            <property name="arrayInitIndent" value="4"/> <!-- Отступ для инициализации массивов -->
            <property name="lineWrappingIndentation" value="4"/> <!-- Отступ для переноса строк -->
            <property name="forceStrictCondition" value="true"/> <!-- Строгая проверка отступов -->
        </module>
    </module>
</module>